#include <stdio.h>


#include <stdio.h>
#define MSG "introdueix la dimensi√≥ de l'array (2 minim): "
#define MSG2 "introdueix el valor a l'array: "

int validar(char * msg, int min, int max){
    int num;
    if(max!=0){
             do{
                printf("%s", msg);
                scanf("%d",&num);
            }while (num<min || num>max);
    }
    else{
            do{
                printf("%s", msg);
                scanf("%d",&num);
            }while (num<min);
    } 
    return num;
}


int ordenar(int * ordenacio, int size){
    int i, j, auxiliar;
    for (i=0; i<(size-1); i++){
         for (j=i+1; j<(size); j++){
            if(ordenacio[i]<ordenacio[j]){
                auxiliar=ordenacio[j];
                ordenacio[j]=ordenacio[i];
                ordenacio[i]=auxiliar;
                 ///printf("%d", ordenacio[i]);
                 // printf("%d", ordenacio[j]);
            }
            
         }
    }
    
     for (i=0; i<(size); i++){
      printf("%d, ", ordenacio[i]);
      i=i+1;
    }
    
}

int main(){   
    int size, min=2,i=0, max=50;
    size=validar( MSG, min, max);
    int arrai[size];
    min=1;
    do{
        max=0;
        arrai[i]=validar(MSG2, min, max);
        i=i+1;
    }while(i<size);
    ordenar(arrai, size);
}
